{
    "name": "Fake News Indicator",
    "description": "Placeholder",
    "version": "0.1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "./background.js"
    },
    "options_page": "./html/options.html",
    "action": {
        "default_popup": "./html/popup.html"
    },
    "permissions": [
        "activeTab",
        "tabs",
        "storage",
        "scripting"
    ],
    "host_permissions": [
        "https://*/*",
        "http://*/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://*/*",
                "http://*/*"
            ],
            "js": [
                "./libs/jquery-3.6.0.min.js",
                "./scripts/content.js"
            ]
        }
    ]
}